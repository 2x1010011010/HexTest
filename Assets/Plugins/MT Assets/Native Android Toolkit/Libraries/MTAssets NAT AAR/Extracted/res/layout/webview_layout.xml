<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@android:color/white" />

    <LinearLayout
        android:id="@+id/layout_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/toolbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@color/webview_toolbar_background"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/webview_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center|left"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/webview_page_icon" />

            <TextView
                android:id="@+id/webview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="Browser"
                android:textColor="@color/webview_toolbar_title" />

            <ImageView
                android:id="@+id/button_refresh"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center|right"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/webview_refresh"
                android:tint="@color/webview_outside_webview_icons_tint" />

            <ImageView
                android:id="@+id/button_close_webview"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center|right"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="0"
                android:src="@drawable/webview_close"
                android:tint="@color/webview_outside_webview_icons_tint" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/loading_error"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="gone">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"

                    android:layout_gravity="center|top"
                    android:src="@drawable/webview_error"
                    android:tint="@color/webview_inside_webview_icons_tint" />

                <TextView
                    android:id="@+id/loading_error_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="Generic Error Message"
                    android:textAlignment="center"
                    android:textColor="@color/webview_inside_webview_icons_tint"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/loading_error_button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:text="Generic Retry" />
            </LinearLayout>

            <WebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                tools:visibility="visible">

            </WebView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/loading_spinner"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:progress="0" />
            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/controls"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="0"
            android:background="@color/webview_toolbar_background"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/button_back"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center|left"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="26dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/webview_back"
                android:tint="@color/webview_outside_webview_icons_tint" />

            <ImageView
                android:id="@+id/button_forward"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center|left"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/webview_forward"
                android:tint="@color/webview_outside_webview_icons_tint" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/button_home"
                android:layout_width="28dp"
                android:layout_height="25dp"
                android:layout_gravity="center|right"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/webview_home"
                android:tint="@color/webview_outside_webview_icons_tint" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>